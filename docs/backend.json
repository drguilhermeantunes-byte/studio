{
  "entities": {
    "call": {
      "title": "Call",
      "description": "Represents a patient call.",
      "type": "object",
      "properties": {
        "patientName": {
          "type": "string",
          "description": "The name of the patient."
        },
        "roomNumber": {
          "type": "string",
          "description": "The room number."
        },
        "professionalName": {
          "type": "string",
          "description": "The name of the health professional."
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "The time of the call."
        }
      },
      "required": ["patientName", "roomNumber", "timestamp"]
    }
  },
  "auth": {
    "providers": []
  },
  "firestore": {
    "/calls/{callId}": {
      "schema": {
        "$ref": "#/backend/entities/call"
      },
      "description": "Stores the patient calls."
    }
  }
}
